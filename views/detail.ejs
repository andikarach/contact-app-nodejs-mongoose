<div class="container mt-3">
	<div class="row">
		<div class="col-md-8">
			<h2>Detail Contact</h2>
			<% if (!contact) { %>
				<div class="alert alert-danger fw-bold mt-3" role="alert">
				  Data contact tidak ada <br> 
				  <a href="/contact" class="alert-link fw-light">&laquo; Back</a>
				</div>
			<% } else { %>
				<div class="card" style="width: 18rem;">
				  <div class="card-body">
				    <h5 class="card-title"><%= contact.nama %></h5>
				    <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHP %></h6>
				    <p class="card-text"><%= contact.email %></p>
				    <a href="/contact/update/<%= contact.email %>" class="badge bg-info"> Update</a>
				    <a href="/contact/delete/<%= contact.email %>" class="badge bg-danger" onclick="return confirm('yakin ?')"> Delete</a><br>
				    <a href="/contact" class="card-link">&laquo; Back</a>
				  </div>
				</div>
			<% } %>
		</div>
	</div>
</div>